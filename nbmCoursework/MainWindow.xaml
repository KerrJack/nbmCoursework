<Window x:Class="nbmCoursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nbmCoursework"
        mc:Ignorable="d"
        Title="Napier Banking Message Filtering Service" Height="450" Width="800">
  <Grid RenderTransformOrigin="0.439,0.716">
    <TextBox x:Name="MessageHeaderTextBox" HorizontalAlignment="Left" Height="23" Margin="194,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
    <Label x:Name="MessageHeaderLabel" Content="Message Header" HorizontalAlignment="Left" Margin="74,49,0,0" VerticalAlignment="Top" Height="42"/>
    <TextBox x:Name="MessageBodyTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="122" Margin="194,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>
    <Label x:Name="MessageBodyLabel" Content="Message Body" HorizontalAlignment="Left" Margin="74,121,0,0" VerticalAlignment="Top" Height="42"/>
    <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="274,265,0,0" VerticalAlignment="Top" Width="75" Click="SubmitButton_Click"/>
        <Button x:Name="NewMessageButton" Content="New" HorizontalAlignment="Left" Margin="194,265,0,0" VerticalAlignment="Top" Width="75" Click="SubmitButton_Click"/>
        <Button x:Name="hashtagListButton" Content="Hashtag List" HorizontalAlignment="Left" Margin="600,49,0,0" VerticalAlignment="Top" Width="75" Click="hashtagListButton_Click"/>
        <TextBox x:Name="hashtagReportBox" HorizontalAlignment="Left" Height="175" Margin="600,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
